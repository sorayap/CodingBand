@model Libros.Models.Libro

@{
    ViewBag.Title = "Create";
}

<h2>Agregar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Libro</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="col-md-offset-1 col-md-5">
            <div class="form-group">
                <label class="control-label col-md-2">Título</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Titulo)
                    @Html.ValidationMessageFor(model => model.Titulo)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Edición</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FechaEdicion)
                    @Html.ValidationMessageFor(model => model.FechaEdicion)
                </div>
            </div>
           </div>
        <div class="col-md-offset-1 col-md-5">
            <table class="table">
                <tr>
                    <th>
                       Nombre
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in ViewBag.AllAutores)
                {
                    <tr>
                        <td>
                            @item.Nombre
                        </td>
                       <td>
                           <input type="checkbox" name="ids" value="@item.IdAutor" />
                       </td>
                    </tr>
                }

            </table>
</div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-5">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
                <div class="col-md-offset-1 col-md-5">
                    <input type="button" value="Cancelar" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
